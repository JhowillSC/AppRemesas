@model AppRemesas.ViewModel.TransaccionesViewModel

@{
    ViewData["Title"] = "Lista de Transacciones"; 
}

<h1 style="text-align: center;">LISTADO DE TRANSACCIONES</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark" style="background-color: #007bff; color: white;">
            <tr>
                <th>Nombre Remitente</th> 
                <th>Nombre Destinatario</th> 
                <th>País Origen</th> 
                <th>País Destino</th>
                <th>Monto Enviado</th>
                <th>Moneda</th>
                <th>Tasa de Cambio</th>
                <th>Monto Final</th>
                <th>Estado</th>
                <th>Fecha de Transacción</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ListTransacciones != null && Model.ListTransacciones.Any())
            {
                foreach (var transaccion in Model.ListTransacciones) 
                {
                    <tr style="background-color: #e3f2fd;">
                        <td>@transaccion.NombreRemitente</td> 
                        <td>@transaccion.NombreDestinatario</td>
                        <td>@transaccion.PaisOrigen</td>
                        <td>@transaccion.PaisDestino</td>
                        <td>@transaccion.MontoEnviado</td>
                        <td>@transaccion.Moneda</td>
                        <td>@transaccion.TasaCambio</td>
                        <td>@transaccion.MontoFinal</td> 
                        <td>@transaccion.Estado</td>
                        <td>@transaccion.FechaTransaccion.ToString("dd/MM/yyyy")</td> 
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10" class="text-center">No hay transacciones registradas.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    tr:hover {
    background-color: #bbdefb; 
}
</style>
